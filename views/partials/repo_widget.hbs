<div class="card shadow rounded" id="widget-{{key}}">
    <div class="card-header">
        <h3>{{name}}</h3>
    </div>
    <div class="card-body">
        <button type="button" class="close widget-close" aria-label="Close" id="widget-close-{{key}}">
            <span aria-hidden="true">&times;</span>
        </button>
        <p class="font-weight-bold" style="font-size: 20px">Size : {{size}}</p>
        <p class="font-weight-bold" style="font-size: 20px">Private : {{private}}</p>
        <p class="font-weight-bold" style="font-size: 20px">Fork : {{fork}}</p>
        <p class="font-weight-bold" style="font-size: 20px">Owner : {{owner}}</p>
        <p class="font-weight-bold" style="font-size: 20px">language : {{language}}</p>
        <p class="font-weight-bold" style="font-size: 20px">Watcher : {{watch}}</p>
    </div>
</div>