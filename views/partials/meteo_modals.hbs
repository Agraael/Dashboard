<div class="modal fade" id="meteoModal" tabindex="-1" role="dialog" aria-labelledby="meteoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Choose your City ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="meteo-city" class="col-sm-2 col-form-label">City</label>
                        <input type="text" class="form-control" id="meteo-city"  placeholder="Enter the city">
                    </div>
                    <div class="form-group">
                        <label for="meteo-timer" class="col-sm-2 col-form-label">Timer</label>
                        <input type="number" min="1" class="form-control" id="meteo-timer" placeholder="Enter frequency time (seconds)">
                    </div>
                    <button type="submit" id="add-meteo-widget" class="btn text-white btn-info btn-block">Add</button>
                </form>
            </div>
            <div class="modal-footer">
                <div id="meteo-err" class="alert alert-danger mx-auto err-alert" role="alert"></div>
            </div>
        </div>
    </div>
</div>